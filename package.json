{
  "name": "miro-dev",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Miro API with OAuth2 authentication",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "dev:http": "tsx --watch src/local-server.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/local-server.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:api": "tsx src/test-api.ts",
    "test:mcp": "tsx src/test-mcp.ts",
    "oauth": "tsx src/oauth-helper.ts",
    "deploy:scaleway": "./deploy-scaleway-functions.sh"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "miro",
    "oauth2",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "~1.0.4",
    "axios": "~1.7.9",
    "dotenv": "~16.4.7",
    "express": "~4.21.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.0"
  }
}
